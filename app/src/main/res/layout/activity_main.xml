<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    
<RelativeLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:padding="30dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/logo"
        android:id="@+id/logo"
        android:background="#fafafa"/>




    <androidx.cardview.widget.CardView
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="#ffe082"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/workout_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="PUSHUP"
                android:textSize="30sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/workout_name"
                android:layout_alignParentRight="true"
                android:src="@drawable/pushup"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/first"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#ffab91"
        app:cardCornerRadius="18dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/workout_name_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="DB\nPUSHUP"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/workout_name_two"
                android:layout_alignParentRight="true"
                android:src="@drawable/dbpushup"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/second"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#e6ee9c"
        app:cardCornerRadius="18dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/workout_name_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="INCLINE\nBP"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/workout_name_three"
                android:layout_alignParentRight="true"
                android:src="@drawable/inclinebenchpress"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fourth"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/third"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="18dp"
        android:padding="15dp"
        app:cardBackgroundColor="#80deea">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/workout_name_four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BENCH\nPRESS"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/workout_name_four"
                android:layout_alignParentRight="true"
                android:src="@drawable/benchpress"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Begin"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="#ff80ab"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fourth"
        android:onClick="pushup"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="27dp"
        android:hint="No of sets" />
</RelativeLayout>
</ScrollView>